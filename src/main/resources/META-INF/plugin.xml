<idea-plugin>
    <id>by.degree.learn.idea.plugin.solid.framework.solid-framework-idea-plugin</id>
    <name>SOLID Framework Support</name>
    <vendor email="eugene.dubrovka@gmail.com" url="https://www.degree.by">Eugene Dubrovka</vendor>

    <description><![CDATA[
    Provides support for SOLID Framework ala Spring-reinvented
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.properties</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="by.degree.learn.idea.plugin.solid.framework.AnnounceFrameworkSupport"/>
        <implicitUsageProvider implementation="by.degree.learn.idea.plugin.solid.framework.SolidImplicitUsageProvider"/>
        <codeInsight.lineMarkerProvider language="UAST" implementationClass="by.degree.learn.idea.plugin.solid.framework.SolidLineMarkerProvider"/>
        <localInspection language="JAVA"
                         displayName="@Component annotation missing"
                         groupName="SOLID"
                         enabledByDefault="true"
                         implementationClass="by.degree.learn.idea.plugin.solid.framework.SolidInspectionTool"/>
        <codeInsight.parameterNameHints
                order="first"
                language="JAVA"
                implementationClass="by.degree.learn.idea.plugin.solid.framework.SolidJavaInlayParameterHintsProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
